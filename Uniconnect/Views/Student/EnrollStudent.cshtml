@model Uniconnect.Models.DTO.AddStudentDTO

<form asp-action="EnrollStudent">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary"> Enroll Student</h1>
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="StudentName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="StudentName" class="form-control" />
                <span asp-validation-for="StudentName" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="DateOfBirth" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input type="Date" asp-for="DateOfBirth" class="form-control" value="@Model?.DateOfBirth.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="UniversityCourse" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="UniversityCourse" class="form-control" />
                <span asp-validation-for="UniversityCourse" class="text-danger"></span>
            </div>

           @*  <div class="col-2">
                <label asp-for="WelshLanguageProficiency" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="WelshLanguageProficiency" class="form-control" />
                <span asp-validation-for="WelshLanguageProficiency" class="text-danger"></span>
            </div> *@
            <div class="col-2">
                <label asp-for="WelshLanguageProficiency" class="control-label pt-2" style="font-size:20px;">Welsh Proficiency</label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="WelshLanguageProficiency"
                        asp-items="Uniconnect.Helpers.EnumHelper.GetEnumSelectList<UniConnectUtility.SD.WelshLanguageProficiency>()"
                        class="form-control">
                    <option value="">-- Select --</option>
                </select>
                <span asp-validation-for="WelshLanguageProficiency" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="StartDate" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input type="date" asp-for="StartDate" value="@Model?.StartDate.ToString("yyyy-MM-dd")" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="EndDate" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input type="date" asp-for="EndDate" class="form-control" value="@Model?.EndDate.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="col-5 offset-2">
                <a asp-action="IndexStudent" asp-controller="Student" class="btn-primary btn form-control">Back To List</a>
            </div>
            <div class="col-5">
                <input type="Submit" value="Create" class="btn btn-success form-control" />
            </div>

        </div>
    </div>
</form>
@section Scripts {

    <partial name="_ValidationScriptsPartial" />
}
