@model UniConnect.Models.DTO.UpdateStudentDTO

<form asp-action="UpdateStudent">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary"> Update Student</h1>
        <br/>
        <input hidden asp-for="StudentID" />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="StudentName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="StudentName" class="form-control" />
                <span asp-validation-for="StudentName" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="WelshLanguageProficiency" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="WelshLanguageProficiency" class="form-control" />
                <span asp-validation-for="WelshLanguageProficiency" class="text-danger"></span>
            </div>

            
            <div class="col-5 offset-2">
                <a asp-action="IndexStudent" asp-controller="Student" class="btn-primary btn form-control">Back To List</a>
            </div>
            <div class="col-5">
                <input type="Submit" value="Update" class="btn btn-success form-control" />
            </div>

        </div>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
